@page "/agent-management"
@using Shared

<PageTitle>Agent Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pt-2 pb-6">
    <!-- Header Section -->
    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3" Class="mb-4">
        <MudText Typo="Typo.h5">Agent Management</MudText>
        
        @if (_isLoading)
        {
            <MudProgressCircular Indeterminate="true" Size="Size.Small" />
            <MudText Typo="Typo.body2" Color="Color.Secondary">Loading...</MudText>
        }
        
        <MudSpacer />
    </MudStack>

    <!-- Empty State Messages -->
    @if (_loadError != null)
    {
        <MudAlert Severity="Severity.Error">
            <MudText Typo="Typo.body1">@_loadError</MudText>
            <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="RefreshAgentsAsync" Class="mt-2">
                Try Again
            </MudButton>
        </MudAlert>
    }
    else if (!_isLoading && (_agents == null || !_agents.Any()))
    {
        <MudAlert Severity="Severity.Info">No agents found. Check your agent endpoint configuration.</MudAlert>
    }
    else if (_agents != null && _agents.Any())
    {
        <!-- Agent Card -->
        <MudCard Elevation="1" Class="rounded-lg">
            <MudCardContent Class="pa-4">
                <MudStack Spacing="3">
                    <!-- Agent Selection Header -->
                    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                            <MudMenu Color="Color.Primary">
                                <ActivatorContent>
                                    <MudButton Color="Color.Primary" 
                                               Variant="Variant.Outlined" 
                                               StartIcon="@Icons.Material.Filled.SmartToy" 
                                               EndIcon="@Icons.Material.Filled.KeyboardArrowDown">
                                        @(_selectedAgentId != null ? _agents.FirstOrDefault(a => a.Id == _selectedAgentId)?.Name ?? "Select Agent" : "Select Agent")
                                    </MudButton>
                                </ActivatorContent>
                                <ChildContent>
                                    @foreach (var agent in _agents.OrderBy(a => a.Name))
                                    {
                                        <MudMenuItem OnClick="@(() => SelectAgentAsync(agent.Id))">
                                            <MudStack Spacing="0">
                                                <MudText Typo="Typo.body1">@agent.Name</MudText>
                                                <MudText Typo="Typo.caption" Color="Color.Secondary">ID: @agent.Id</MudText>
                                                @if (!string.IsNullOrWhiteSpace(agent.Description))
                                                {
                                                    <MudText Typo="Typo.caption" Color="Color.Default">@agent.Description</MudText>
                                                }
                                            </MudStack>
                                        </MudMenuItem>
                                    }
                                </ChildContent>
                            </MudMenu>
                            
                            <MudChip T="string" Size="Size.Small" Color="Color.Primary">
                                @_agents.Length agent@(_agents.Length != 1 ? "s" : "")
                            </MudChip>
                            
                            <MudIconButton Icon="@Icons.Material.Filled.Refresh" 
                                           Size="Size.Small"
                                           OnClick="RefreshAgentsAsync"
                                           Disabled="_isLoading"
                                           Title="Refresh Agents" />
                                            
                            @if (!string.IsNullOrEmpty(_selectedAgentId) && _selectedAgent != null && !_isLoadingAgent)
                            {
                                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                               Size="Size.Small"
                                               OnClick="DeleteCustomPromptAsync"
                                               Disabled="_isDeleting || _isEditingPrompt"
                                               Title="Delete Custom Prompt" />
                            }
                        </MudStack>
                        
                        @if (!string.IsNullOrEmpty(_selectedAgentId) && _selectedAgent != null)
                        {
                            <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                                @if (_isLoadingAgent)
                                {
                                    <MudProgressCircular Indeterminate="true" Size="Size.Small" />
                                }
                                else
                                {
                                    <MudButton Color="Color.Primary" 
                                               Variant="Variant.Filled" 
                                               StartIcon="@Icons.Material.Filled.Edit"
                                               OnClick="@(() => _isEditingPrompt = !_isEditingPrompt)"
                                               Disabled="_isSaving">
                                        @(_isEditingPrompt ? "Cancel" : "Edit")
                                    </MudButton>
                                }
                            </MudStack>
                        }
                    </MudStack>

                    @if (string.IsNullOrEmpty(_selectedAgentId))
                    {
                        <MudDivider />
                        <MudStack AlignItems="AlignItems.Center" Justify="Justify.Center" Class="py-8">
                            <MudIcon Icon="@Icons.Material.Filled.SmartToy" Size="Size.Large" Color="Color.Secondary" />
                            <MudText Typo="Typo.body1" Color="Color.Secondary">Select an agent to view and edit its system prompt</MudText>
                        </MudStack>
                    }
                    else if (_selectedAgent != null)
                    {
                        <MudDivider />

                        <!-- System Prompt Section -->
                        @if (_isEditingPrompt)
                        {
                            <!-- Edit Mode -->
                            <MudStack Spacing="2">
                                <div class="editor-wrapper" @onscroll="OnEditorScroll">
                                    <div class="line-numbers" @ref="_lineNumbersRef">
                                        @for (int i = 1; i <= GetLineCount(_editedInstructions); i++)
                                        {
                                            <div class="line-number">@i</div>
                                        }
                                    </div>
                                    <textarea @bind="_editedInstructions" 
                                              @bind:event="oninput"
                                              @ref="_textareaRef"
                                              class="system-prompt-textarea"
                                              placeholder="Enter the system prompt for this agent..."
                                              maxlength="12000"></textarea>
                                </div>
                                
                                <MudStack Row="true" Spacing="2" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                                        @(_editedInstructions?.Length ?? 0) / 12000 characters • @GetLineCount(_editedInstructions) lines
                                    </MudText>
                                    <MudStack Row="true" Spacing="2">
                                        <MudButton OnClick="CancelEdit" 
                                                   Variant="Variant.Text"
                                                   Disabled="_isSaving">
                                            Cancel
                                        </MudButton>
                                        <MudButton Color="Color.Primary" 
                                                   Variant="Variant.Filled" 
                                                   OnClick="SaveChangesAsync"
                                                   Disabled="_isSaving"
                                                   StartIcon="@Icons.Material.Filled.Save">
                                            @(_isSaving ? "Saving..." : "Save")
                                        </MudButton>
                                    </MudStack>
                                </MudStack>
                            </MudStack>
                        }
                        else
                        {
                            <!-- View Mode -->
                            <MudStack Spacing="2">
                                @if (_isLoadingAgent)
                                {
                                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="400px" />
                                }
                                else
                                {
                                    <div class="editor-wrapper" @onscroll="OnEditorScroll">
                                        <div class="line-numbers" @ref="_lineNumbersRef">
                                            @{
                                                var content = string.IsNullOrWhiteSpace(_selectedAgent.Instructions) ? "No system prompt defined" : _selectedAgent.Instructions;
                                                var lineCount = GetLineCount(content);
                                            }
                                            @for (int i = 1; i <= lineCount; i++)
                                            {
                                                <div class="line-number">@i</div>
                                            }
                                        </div>
                                        <pre class="system-prompt-view" @ref="_preRef">@content</pre>
                                    </div>
                                    
                                    <MudStack Row="true" Justify="Justify.FlexEnd">
                                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                                            @(_selectedAgent.Instructions?.Length ?? 0) characters • @lineCount lines
                                        </MudText>
                                    </MudStack>
                                }
                            </MudStack>
                        }
                    }
                </MudStack>
            </MudCardContent>
        </MudCard>
    }
</MudContainer>

<style>
    .rounded-lg {
        border-radius: 8px;
    }

    .editor-wrapper {
        display: flex;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        background-color: #ffffff;
        height: calc(100vh - 320px);
        min-height: 300px;
        overflow: hidden;
    }

    .line-numbers {
        width: 50px;
        background-color: #f5f5f5;
        border-right: 1px solid #e0e0e0;
        padding: 12px 0;
        text-align: right;
        user-select: none;
        flex-shrink: 0;
        overflow-y: hidden;
    }

    .line-number {
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
        font-size: 13px;
        line-height: 1.5;
        color: #999999;
        padding-right: 12px;
        height: 19.5px;
    }

    .system-prompt-textarea {
        flex: 1;
        width: 100%;
        padding: 12px 16px;
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
        font-size: 13px;
        line-height: 1.5;
        border: none;
        resize: none;
        background-color: #ffffff;
        color: #333333;
        outline: none;
        overflow-y: auto;
    }

    .system-prompt-textarea:focus {
        background-color: #ffffff;
    }

    .system-prompt-textarea::placeholder {
        color: #999999;
    }

    .system-prompt-view {
        flex: 1;
        margin: 0;
        padding: 12px 16px;
        font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
        font-size: 13px;
        line-height: 1.5;
        color: #333333;
        background-color: #ffffff;
        overflow-y: auto;
        white-space: pre-wrap;
        word-wrap: break-word;
    }
</style>

@code {
    private ElementReference _lineNumbersRef;
    private ElementReference _textareaRef;
    private ElementReference _preRef;

    private int GetLineCount(string? text)
    {
        if (string.IsNullOrEmpty(text))
            return 1;
        
        return text.Split('\n').Length;
    }

    private void OnEditorScroll(EventArgs e)
    {
        // Scroll sync would require JS interop
    }
}
